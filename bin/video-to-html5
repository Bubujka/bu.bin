#!/bin/bash
mkdir -p "$2"k  2> /dev/null

avconv -i "$1" -s $3 -b "$2"k -vcodec libx264 -acodec   libvorbis -ab 160000 -preset slow -g 30 "${2}k/$1.mp4" &
avconv -i "$1" -s $3 -b "$2"k -vcodec libvpx -acodec    libvorbis -ab 160000 -f webm -g 30 "${2}k/$1.webm" &
avconv -i "$1" -s $3 -b "$2"k -vcodec libtheora -acodec libvorbis -ab 160000 -g 30 "${2}k/$1.ogv" &
