#!/bin/bash
. ~/.bashrc

TARGET=$(cat ~/.puffy-latest-target)
if [ ! -n "$TARGET" ]; then
  echo "Aborted" | dzen2-wrapper red ; exit
fi

echo $TARGET > ~/.puffy-latest-target
TEXT="$(echo | dmenu-wrapper 'bc '$TARGET)"
if [ ! -n "$TEXT" ] ; then
  echo "Aborted" | dzen2-wrapper red ; exit
fi

puffy create "$TARGET" "$TEXT"
echo "Writed" | dzen2-wrapper green

