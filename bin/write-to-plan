#!/bin/bash
#---
#title: Записать через dmenu в #unsorted у файла
#---
#. ~/.bashrc
PTH=$1
TARGET="$(dmenu-wrapper 'Что?' 0 1)"
if [ ! -n "$TARGET" ]; then
  echo "Aborted" | dzen2-wrapper red ; exit
fi

add_to_unsorted_section.py "- $TARGET  ($(date '+%B %e'))" $PTH

echo "Writed" | dzen2-wrapper green
