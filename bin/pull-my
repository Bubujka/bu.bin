#!/bin/bash
echo "Downloading..."
for dir in \
  ~/.db/wiki \
  ~/.db/gnucash \
  ~/.db/dotfiles \
  ~/.db/inventory \
  ~/.db/dotfiles-private \
  ~/.password-store \
  ~/.bu.bin \
  ~/.db/prj/websites \
  ~/.db/beta/howto-basic \
  ~/.db/prj/hb \
  ~/.myi3status
do
  if [ -d $dir ]; then
    cd $dir
    git pull &
  fi
done

sleep 3

cd ~/.db/dotfiles
./install.py

cd ~/.db/dotfiles-private
./install.sh
